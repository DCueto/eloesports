html
  margin 0
  padding 0
  font-family 'Roboto', sans-serif


body
  margin 0
  padding 0
  background #E6E6E6
  color white
  text-align center
  
header
  display flex
  width 100%
  height 55px


.logo
  background-color #333333
  color white
  width 200px


nav
  background-color #CCCCCC
  color #666666
  width 100%
  
.menu
  display flex
  list-style none
  
  &-item
    margin 0 20px
    font-size 19px
    a
      text-decoration none
      color #666666

.featured
  background black
  margin 30px auto 70px auto
  padding 1px
  display flex
  width 95%
  
  &-main
    width 734px
    &-article
      width 100%
      height 100%
      overflow hidden
      position relative
      &-image
        margin 0 
        img
          width 100%
      &-bottom
        position absolute
        bottom 0
        width 100%
        //height 20%
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.46) 16%, rgba(0,0,0,1) 100%)
        text-align left
        font-weight 400 !important
        font-size 18px
        p
          padding-top 20px
          //position absolute
          //bottom 0
          margin 0 0 15px 10px
  
  &-secondary
    width 367px
    &-article
      height 50%
      overflow hidden
      position relative
      &-image
        margin 0
        height 100%
        img
          width 100%
      &-bottom
        position absolute
        bottom 0
        width 100%
        //height 30%
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.46) 16%, rgba(0,0,0,1) 100%)
        text-align left
        font-weight 400
        font-size 16px
        p
          padding-top 20px
          //position absolute
          //bottom 0
          margin 0 0 10px 10px
  

footer
  background-color gray
  width 100%
  height 300px
  
